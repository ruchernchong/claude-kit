{
  "name": "claude-kit",
  "version": "0.1.0",
  "description": "A collection of powertools for Claude Code including specialized agents, slash commands, and skills",
  "type": "module",
  "scripts": {
    "bootstrap": "tsx src/setup.ts",
    "install-commands": "tsx src/install-commands.ts",
    "install-skills": "tsx src/install-skills.ts",
    "install-statusline": "tsx src/install-statusline.ts",
    "lint": "biome check",
    "format": "biome format --write src",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:docker": "tsx src/test-runner.ts",
    "prepare": "husky",
    "release": "semantic-release"
  },
  "license": "MIT",
  "packageManager": "pnpm@10.22.0",
  "dependencies": {
    "@clack/prompts": "^0.10.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.11",
    "@commitlint/cli": "^20.3.0",
    "@commitlint/config-conventional": "^20.3.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@types/node": "^22.10.0",
    "@vitest/coverage-v8": "4.0.16",
    "husky": "^9.1.7",
    "semantic-release": "^25.0.2",
    "tsx": "^4.19.0",
    "typescript": "^5.7.2",
    "vitest": "^4.0.16"
  }
}
